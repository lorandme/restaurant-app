<Page x:Class="restaurant_app.Views.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:restaurant_app.Views"
      xmlns:vm="clr-namespace:restaurant_app.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard Administrator">

    <Page.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Background" Value="#FF4C8C4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="MinHeight" Value="80"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF6AAC68"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF3A6C39"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFB5B5B5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF4C8C4A" Padding="15" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                       Text="Dashboard Administrator" 
                       FontSize="22" FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Foreground="White"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Înapoi la Meniu Principal" 
                        Command="{Binding NavigateToMainMenuCommand}"
                        Style="{StaticResource ButtonStyle}"
                        Padding="10,5" MinHeight="30" FontSize="12"/>

                    <Button Content="Deconectare" 
                        Command="{Binding LogoutCommand}"
                        Style="{StaticResource ButtonStyle}"
                        Background="#FFCC0000"
                        Padding="10,5" MinHeight="30" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="10">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Gestionare Produse" 
                    Command="{Binding NavigateToProductsCommand}"
                    Style="{StaticResource ButtonStyle}"/>

                <Button Content="Gestionare Meniuri" 
                    Command="{Binding NavigateToMenusCommand}"
                    Style="{StaticResource ButtonStyle}"/>

                <Button Content="Gestionare Comenzi" 
                    Command="{Binding NavigateToOrdersCommand}"
                    Style="{StaticResource ButtonStyle}"/>

                <Button Content="Raport Stoc Scăzut" 
                    Command="{Binding NavigateToLowStockReportCommand}"
                    Style="{StaticResource ButtonStyle}"/>
            </WrapPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FFF5F5F5" Padding="10">
            <TextBlock Text="{Binding StatusMessage}" Foreground="#FF666666"/>
        </Border>
    </Grid>
</Page>